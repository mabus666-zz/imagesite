<%= form_for @tag, :remote => true do |f| %>
<span class="tag-container" id="tag_<%= @tag.id %>">
	<div class="input-group">
      <%= f.text_field :name, class: "form-control input-sm" %>
      <span class="input-group-btn">
        <%= f.submit class: "btn btn-default btn-sm" %>
      </span>
    </div><!-- /input-group -->
</span

	
	

<% end %>