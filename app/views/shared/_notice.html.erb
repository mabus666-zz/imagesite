<% if !notice.nil? %>
	<div class="alert alert-success">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		<%= notice %>
	</div>
<% end  %>

<% if !alert.nil? %>
	<div class="alert alert-danger">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		<%= alert %>
	</div>
<% end  %>