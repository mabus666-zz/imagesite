
    <div class="modal-content">
      
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4> 
      </div>

      <div class="modal-body">

        <div class="page-select-image">
            <div class="row">
                <% @photos.each do |photo| %>
                    <div class="thumb col-xs-6 col-md-4">
                        <a href="#" class="select-photo-link" data-url="http://<%= request.host_with_port + photo.image_url() %>", data-set-thumbnail="<%= set_thumbnail_path(@page , :photo_id => photo.id) unless @page.new_record? %>" >
                            <%= image_tag photo.image_url(:large_thumb), class: "img-responsive" %>
                        </a>
                        <span class="photo-controls-holder"></span>
                            <span class="page-manager-photo-name"><%= photo.name %></span>
                            <!-- <i class="fa fa-tags text-muted"></i>
                            <% photo.tag_list.each do |tag| %>
                                <small class="text-muted"><%= tag %></small>
                            <% end %>

                            -->
                    </div>
                <% end %>
            </div>
        </div>

        <%= render 'pages/photo_controls' %>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
      

    </div><!-- /.modal-content -->