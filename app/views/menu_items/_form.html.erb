<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <h4 class="modal-title">Menu Item</h4>
</div>
 
  <%= form_for(@menu_item, :remote => true) do |f| %>
    <div class="modal-body">
        <div class="error-container">
            <%= render partial: 'shared/form_errors', :locals => {:item => @menu_item} %>
        </div>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      
      <% if @menu_item.menuable %>
        <%= label_tag "Url" %>
        <%= text_field_tag "path", polymorphic_path(@menu_item.menuable), class: "form-control disabled", disabled: true %>
        <span class="help-block">Only editable for custom external-links</span>
      <% else %>

        <div class="form-group">
          <%= f.label :url %>
          <%= f.text_field :url, class: "form-control" %>
        </div>

        <%= f.hidden_field :menu_id %>
      
      <% end %>
      
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>
      </div>
      <div class="checkbox">
        <%= f.label :new_page, "Open in new window/tab" %>
        <%= f.check_box :new_page %>
      </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
