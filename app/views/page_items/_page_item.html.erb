
	<% if page_item.pageable_type == "Page" %>
		<div class="col-xs-12">
			<div class="well">
				<%= page_item.pageable.title %>
			</div>
		</div>
	<% end %>

	<% if page_item.pageable_type == "Photo" %>
		<div class="col-xs-12 col-sm-6 col-md-4" id="page_item_<%= page_item.id %>">
			<%= link_to "Remove", page_item, method: :delete, remote: true, class: "btn btn-default btn-xs" %>
			<div class="thumbnail">
				<%= image_tag page_item.pageable.image_url(:small_thumb), class: "img-responsive" %>
				<div class="caption">
					<h3><%= page_item.pageable.name %></h3>
						
				</div>
			</div>
			
		</div>	
	<% end %>
    
	<% if page_item.gallery %>
		<div class="col-xs-6">
			<h3>Gallery</h3>
		</div>
		<div class="col-xs-6">
			<%= link_to "Add Photos", gallery_modal_path(:page_id => page_item.page_id, :page_item_id => page_item.id ), remote: true, class: "btn btn-default pull-right" %>
		</div>
		<div class="col-xs-12">
			<hr>
		</div>
		<div class="col-xs-12">
			<div class="row" id="gallery_<%= page_item.id %>">
				<%= nested_page_items(sub_item) %>
			</div>
		</div>
		<div class="col-xs-12">
			<hr>
		</div>

	<% end %>